generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis()]
}

enum UserRole {
  USER
  VENDOR
  ADMIN
  HOST
}

enum EventStatus {
  DRAFT
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}

enum AttendeeStatus {
  INTERESTED
  GOING
  ATTENDED
}

enum BidStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  passwordHash    String   @map("password_hash")
  fullName        String   @map("full_name")
  profilePicture  String?  @map("profile_picture")
  phone           String?
  role            UserRole @default(USER)
  location        String? // Will store as geography point
  preferences     Json?
  emailVerified   Boolean  @default(false) @map("email_verified")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relations
  hostedEvents    Event[]           @relation("EventHost")
  attendedEvents  EventAttendee[]
  vendorServices  VendorService[]
  serviceBids     ServiceBid[]
  reviews         Review[]

  @@map("users")
}

model Category {
  id            String      @id @default(uuid())
  name          String
  slug          String      @unique
  icon          String?
  parentId      String?     @map("parent_id")
  parent        Category?   @relation("CategoryHierarchy", fields: [parentId], references: [id])
  subcategories Category[]  @relation("CategoryHierarchy")
  events        Event[]

  @@map("categories")
}

model Event {
  id              String        @id @default(uuid())
  slug            String        @unique
  title           String
  description     String
  longDescription String?       @db.Text @map("long_description")
  categoryId      String        @map("category_id")
  category        Category      @relation(fields: [categoryId], references: [id])
  hostId          String        @map("host_id")
  host            User          @relation("EventHost", fields: [hostId], references: [id])
  
  // Location details
  location        String        // geography point
  address         String
  latitude        Float?
  longitude       Float?
  
  // Timing details
  date            DateTime      // Event date
  startTime       String        @map("start_time") 
  endTime         String        @map("end_time")   
  startDatetime   DateTime      @map("start_datetime") // Full datetime (kept for compatibility)
  endDatetime     DateTime      @map("end_datetime")   // Full datetime (kept for compatibility)
  
  // Capacity and pricing
  capacity        Int?
  price           Float?
  currency        String        @default("KES")
  
  // Media and tags
  image           String?       // Primary event image
  images          String[]      // Additional images
  tags            String[]
  
  status          EventStatus   @default(DRAFT)
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  // Relations
  attendees       EventAttendee[]
  serviceBids     ServiceBid[]
  reviews         Review[]
  faqs            EventFaq[]
  features        EventFeature[]
  scheduleItems   ScheduleItem[]
  eventTags       EventTag[]

  @@index([location])
  @@index([startDatetime])
  @@index([date])
  @@index([categoryId])
  @@index([status])
  @@map("events")
}

model EventFaq {
  id        String   @id @default(uuid())
  question  String
  answer    String   @db.Text
  order     Int      @default(0)
  
  eventId   String   @map("event_id")
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now()) @map("created_at")

  @@index([eventId])
  @@map("event_faqs")
}

model EventFeature {
  id        String   @id @default(uuid())
  name      String
  icon      String?  // Optional icon name/class
  
  eventId   String   @map("event_id")
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@map("event_features")
}

model ScheduleItem {
  id        String   @id @default(uuid())
  time      String   // e.g., "09:00 AM"
  activity  String
  description String? // Optional detailed description
  order     Int      @default(0)
  
  eventId   String   @map("event_id")
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@map("schedule_items")
}

model EventTag {
  id        String   @id @default(uuid())
  name      String
  
  eventId   String   @map("event_id")
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([eventId, name]) // Prevent duplicate tags for same event
  @@index([eventId])
  @@index([name])
  @@map("event_tags")
}

model EventAttendee {
  id        String         @id @default(uuid())
  eventId   String         @map("event_id")
  event     Event          @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId    String         @map("user_id")
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  status    AttendeeStatus @default(INTERESTED)
  createdAt DateTime       @default(now()) @map("created_at")

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
  @@map("event_attendees")
}

model VendorService {
  id           String       @id @default(uuid())
  vendorId     String       @map("vendor_id")
  vendor       User         @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  serviceName  String       @map("service_name")
  description  String
  category     String
  basePrice    Float        @map("base_price")
  images       String[]
  portfolioUrl String?      @map("portfolio_url")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")

  // Relations
  bids         ServiceBid[]

  @@index([vendorId])
  @@map("vendor_services")
}

model ServiceBid {
  id        String    @id @default(uuid())
  eventId   String    @map("event_id")
  event     Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  vendorId  String    @map("vendor_id")
  vendor    User      @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  serviceId String    @map("service_id")
  service   VendorService @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  bidAmount Float     @map("bid_amount")
  message   String?
  status    BidStatus @default(PENDING)
  createdAt DateTime  @default(now()) @map("created_at")

  @@index([eventId])
  @@index([vendorId])
  @@index([serviceId])
  @@map("service_bids")
}

model Review {
  id        String   @id @default(uuid())
  eventId   String   @map("event_id")
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating    Int      // 1-5
  comment   String?
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
  @@map("reviews")
}